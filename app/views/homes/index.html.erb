<%= stylesheet_link_tag 'application'%>
<%= stylesheet_link_tag 'home'%>
<%= javascript_include_tag 'porthole.min'%>
<%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
<%= csrf_meta_tags %>

<body>

    <div class="home-background">
      <%= bootstrap_flash %>

      <div class="home-details">
        <h1 class="title">Organize the Web.</h1>
        <h2 class="title">Please leave your information below <br>
          we'll let you know when it's ready.
        </h2>
        <h1 class="title">Introducing Scribblet.</h1>
      </div>

        <div class="col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
          <div class="row">
            <form role="form" action="/homes/register" method="post">
              <%= token_tag %>
              <div class="col-md-7 col-sm-7"><input type="email" id="fieldEmail" name="fieldEmail" class="form-control input-lg" placeholder="Email Address" required=""></div><!--7-->
                <div class="col-md-5 col-sm-5 "><button class="btn btn-info btn-block btn-lg">Sign Up</button>
                <%= link_to( new_user_session_path, class: 'home') do%>
                  Or Sign In
                <% end %>
              </div><!--5-->
            </form>
          </div><!--row-->
        </div><!--/6-->

    </div>

</body>
