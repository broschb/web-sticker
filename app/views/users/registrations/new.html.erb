<div class="col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
  <div class="row">
<h2>Sign up</h2>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: 'form-horizontal'}) do |f| %>
<%= devise_error_messages! %>

<div class="form-group">
    <div class="col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
        <%= f.text_field :name, placeholder: "Name", required: "", class: "form-control input-lg",autofocus: true %>
    </div>
</div>

<div class="form-group">
    <div class="col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
        <%= f.email_field :email, placeholder: "Email Address", required: "", class: "form-control input-lg" %>
    </div>
</div>

<div class="form-group">
    <div class="col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
        <%= f.password_field :password, placeholder: "Password", required: "", autocomplete: "off", class: "form-control input-lg" %>
    </div>
</div>

<div class="form-group">
    <div class="col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
        <%= f.password_field :password_confirmation, placeholder: "Password Confirmation", required: "", autocomplete: "off", class: "form-control input-lg" %>
    </div>
</div>

<div class="form-group">
    <div class="col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
        <%= f.submit "Sign up", class: "btn btn-primary" %>
    </div>
</div>

<div class="form-group">
    <div class="col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
        <%= render "users/shared/links" %>
    </div>
</div>
<% end %>
</div>
</div>
