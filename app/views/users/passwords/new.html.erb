<div class="col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
  <div class="row">
<h2>Forgot your password?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'form-horizontal' }) do |f| %>
<%= devise_error_messages! %>

<div class="form-group">
    <div class="col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
        <%= f.email_field :email, autofocus: true,  placeholder: "Email Address", required: "", class: "form-control input-lg" %>
    </div>
</div>

<div class="form-group">
    <div class="col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
        <%= f.submit "Send me reset password instructions", class: "btn btn-primary" %>
    </div>
</div>
<div class="form-group">
    <div class="col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
        <%= render "users/shared/links" %>
    </div>
</div>
<% end %>
</div>
</div>
